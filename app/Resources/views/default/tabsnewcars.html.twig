                <a class="col-md-2 col-xs-4 text-xs-center renault-link col-centered" href="{{ path("voiture", {'id': car.id}) }}">
                    <img src="{{ asset(car.icone.webPath) }}" class="img-fluid" alt="">
                    {{ car.model }}
                </a>
            {% endfor %}
        </div>
        <!--/.Panel 1-->
        <!--Panel 2-->
        <div class="tab-pane fade row-centered" id="panel6" role="tabpanel">
