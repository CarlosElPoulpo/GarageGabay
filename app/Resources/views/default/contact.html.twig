{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-sm-12 col-md-4 social-contact-column flex-center flex-column">
            <h2>{{ garage.name }}</h2>
            <div class="">
                <div class="col-md-12 text-sm-center">
                    <a class="btn-floating btn-small green"><i class="fa fa-phone"></i></a>
                    <p>{{ garage.phone }}</p>
                </div>
                <div class="col-md-12 text-sm-center">
                    <a href="mailto:{{ garage.email }}" class="btn-floating btn-small blue"><i
                                class="fa fa-envelope"></i></a>
                    <p>{{ garage.email }}</p>
                </div>
                <div class="col-md-12 text-sm-center">
                    <a href="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2812.394086065409!2d5.7330649159271845!3d45.179118279098724!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x478af4ec08049f83%3A0xb04eacf51ecca2a3!2s28+Avenue+Jean+Perrot%2C+38100+Grenoble!5e0!3m2!1sfr!2sfr!4v1484818302816"
                       class="btn-floating btn-small red"><i class="fa fa-map-marker"></i></a>
                    <p>{{ garage.roadnumber }} {{ garage.road }}<br>
                        {{ garage.postalcode }} {{ garage.city }}</p>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-7">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2812.394086065409!2d5.7330649159271845!3d45.179118279098724!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x478af4ec08049f83%3A0xb04eacf51ecca2a3!2s28+Avenue+Jean+Perrot%2C+38100+Grenoble!5e0!3m2!1sfr!2sfr!4v1484818302816"
                        width="100%" height="500" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
    </div>
{% endblock %}