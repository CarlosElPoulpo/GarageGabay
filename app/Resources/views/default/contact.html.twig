{% extends ':site-structure:base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-sm-12 col-md-4 social-contact-column flex-center flex-column">
            <h2>{{ garage.name }}</h2>
            <div class="">
                <div class="col-md-12 text-sm-center">
                    <a class="btn-floating btn-small green"><i class="fa fa-phone"></i></a>
                    <p>{{ garage.phone }}</p>
                </div>
                <div class="col-md-12 text-sm-center">
                    <a href="mailto:{{ garage.email }}" class="btn-floating btn-small blue"><i
                                class="fa fa-envelope"></i></a>
                    <p>{{ garage.email }}</p>
                </div>
                <div class="col-md-12 text-sm-center">
                    <a href="http://maps.google.com/?q={{ garage.roadNumber~" "~garage.road~", "~garage.postalCode~" "~garage.city}}"
                       class="btn-floating btn-small red" target="_blank"><i class="fa fa-map-marker"></i></a>
                    <p>{{ garage.roadnumber }} {{ garage.road }}<br>
                        {{ garage.postalcode }} {{ garage.city }}</p>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-7">
            <iframe src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCKm_YWed7MKCa2M-i94leCpzdMgjM7J2g&q={{ garage.roadNumber~" "~garage.road~", "~garage.postalCode~" "~garage.city}}"
                        width="100%" height="500" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
    </div>
{% endblock %}