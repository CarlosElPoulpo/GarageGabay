<div class="col-md-12 hidden-sm-down">
    <ul class="nav nav-tabs tabs-3 second-color" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#panel5" role="tab">Véhicules particuliers</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#panel6" role="tab">Véhicules utilitaires</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#panel7" role="tab">Véhicules électriques</a>
        </li>
    </ul>
    <!-- Tab panels -->
    <div class="tab-content">
        <!--Panel 1-->
        <div class="tab-pane fade in show active" id="panel5" role="tabpanel">
            <div class="d-flex flex-row justify-content-center row">
            {% for car in particuliers %}
                {% include ":elements:newcar_button_for_displayer.html.twig" with {"car": car} %}
            {% endfor %}
            </div>
        </div>
        <!--/.Panel 1-->
        <!--Panel 2-->
        <div class="tab-pane fade" id="panel6" role="tabpanel">
            <div class="d-flex flex-row justify-content-center row">
            {% for car in utilitaires %}
                {% include ":elements:newcar_button_for_displayer.html.twig" with {"car": car} %}
            {% endfor %}
            </div>
        </div>
        <!--/.Panel 2-->
        <!--Panel 3-->
        <div class="tab-pane fade" id="panel7" role="tabpanel">
            <div class="d-flex flex-row justify-content-center row">
            {% for car in electriques %}
                {% include ":elements:newcar_button_for_displayer.html.twig" with {"car": car} %}
            {% endfor %}
            </div>
        </div>
        <!--/.Panel 3-->
    </div>
</div>

<div class="accordion hidden-md-up" id="accordion" role="tablist" aria-multiselectable="true">
    <div class="card">
        <div class="card-header" role="tab" id="headingOne">
            <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                <h5 class="mb-0">
                    Véhicules particuliers <i class="fa fa-angle-down rotate-icon"></i>
                </h5>
            </a>
        </div>
        <div id="collapseOne" class="collapse show" role="tabpanel" aria-labelledby="headingOne">
            <div class="d-flex flex-row justify-content-center row">
                {% for car in particuliers %}
                    <a class="col-6 renault-link flex-column flex-center" href="{{ path("newcar_details", {'id': car.id}) }}">
                        <img src="{{ asset(car.icone.webPath) }}" class="img-fluid" alt="">
                        <span class="text-center">{{ car.model }}</span>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header" role="tab" id="headingTwo">
            <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                <h5 class="mb-0">
                    Véhicules utilitaires <i class="fa fa-angle-down rotate-icon"></i>
                </h5>
            </a>
        </div>
        <div id="collapseTwo" class="collapse" role="tabpanel" aria-labelledby="headingTwo">
            <div class="card-block">
                <div class="d-flex flex-row justify-content-center row">
                    {% for car in utilitaires %}
                        <a class="col-6 renault-link flex-column flex-center" href="{{ path("newcar_details", {'id': car.id}) }}">
                            <img src="{{ asset(car.icone.webPath) }}" class="img-fluid" alt="">
                            <span class="text-center">{{ car.model }}</span>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header" role="tab" id="headingThree">
            <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                <h5 class="mb-0">
                    Véhicules électriques <i class="fa fa-angle-down rotate-icon"></i>
                </h5>
            </a>
        </div>
        <div id="collapseThree" class="collapse" role="tabpanel" aria-labelledby="headingThree">
            <div class="card-block">
                <div class="d-flex flex-row justify-content-center row">
                    {% for car in electriques %}
                        <a class="col-6 renault-link flex-column flex-center" href="{{ path("newcar_details", {'id': car.id}) }}">
                            <img src="{{ asset(car.icone.webPath) }}" class="img-fluid" alt="">
                            <span class="text-center">{{ car.model }}</span>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>