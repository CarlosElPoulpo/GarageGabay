{% extends "::layout.html.twig" %}

{% block stylesheets %} {{ parent() }}
    <link href="{{ asset("css/menu_on_index.css") }}" rel="stylesheet">
{% endblock %}

{% block central_layout %}
    {% block body %}
    {% endblock %}
{% endblock %}

{% block javascripts %} {{ parent() }}
    <!--<script type="text/javascript" src="{{ asset("js/skrollr.js") }}"></script>-->
    <script>
        $("#white-logo").removeClass("hidden-xs-up");
        $("#black-logo").addClass("hidden-xs-up");
        $(window).scroll(function () {
            if ($(window).scrollTop() > 60) {
                $("#black-logo").removeClass("hidden-xs-up");
                $("#white-logo").addClass("hidden-xs-up");
            } else {
                $("#white-logo").removeClass("hidden-xs-up");
                $("#black-logo").addClass("hidden-xs-up");
            }
        });
    </script>
{% endblock %}